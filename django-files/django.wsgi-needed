import os, site, sys

# From http://jmoiron.net/blog/deploying-django-mod-wsgi-virtualenv/

vepath = '/home/ubuntu/.virtualenvs/%(PROJECT_NAME)s/lib/python2.7/site-packages'

prev_sys_path = list(sys.path)

site.addsitedir(vepath)

sys.path.append('/home/ubuntu/django_projects')
sys.path.append('/home/ubuntu/django_projects/%(PROJECT_NAME)s')
sys.path.append('/home/ubuntu/django_projects/%(PROJECT_NAME)s/%(PROJECT_NAME)s_site')

# reorder sys.path so new directories from the addsitedir show up first
new_sys_path = [p for p in sys.path if p not in prev_sys_path]
for item in new_sys_path:
    sys.path.remove(item)
sys.path[:0] = new_sys_path

from django.core.handlers.wsgi import WSGIHandler
os.environ['DJANGO_SETTINGS_MODULE'] = '%(PROJECT_NAME)s.settings'
application = WSGIHandler()